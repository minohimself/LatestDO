<%= form_for @message do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :subject %><br/>
      <%= f.text_field :subject %>
    </p>
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body, :rows => 5 %>
    </p>
    <p>
      <%= f.label :recipients %><br/>
      <%= f.text_field :recipients %>
    </p>
    <p><%= f.submit %></p>
<% end %>